<%-include('partials/header'),{title:'Home',user:user} %>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            /* Ensures content is pushed towards the center */
        }

        /* Navbar fix at top */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 15px 20px;
            z-index: 1000;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        /* Video Background */
        .video-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            z-index: -1;
        }

        .video-container video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Centering Content */
        .content {
            position: absolute;
            /* Using absolute positioning for centering */
            top: 50%;
            /* Start from the vertical center */
            left: 50%;
            /* Start from the horizontal center */
            transform: translate(-50%, -50%);
            /* Correct the offset to perfectly center the content */
            text-align: center;
            color: white;
            z-index: 1;
            padding: 20px;
        }

        h1 {
            font-size: 3rem;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            /* Improved text readability */
        }

        .lead {
            font-size: 1.5rem;
            margin-bottom: 15px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
        }

        .follow {
            font-size: 1.2rem;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
        }

        .link{
            text-decoration: none;
            color: #0e4e57;
            text-shadow: none;
            font-weight: bold;
        }
    </style>



    <body>
        <div class="video-container">
            <video autoplay loop muted playsinline slow>
                <source src="/videos/1841455-hd_1280_720_25fps.mp4" type="video/mp4">

            </video>

        </div>
        <div class="content">
            <h1>...Welcome to My Muse...</h1>
            <p class="lead">A creative space where ideas come alive and inspiration knows no bounds.</p>

            <% if (user) { %>
                <p class="follow">
                    Hello,
                    <span class="follow">
                        <%= user.username %>
                    </span>!
                    Welcome back!
                </p>
                <a class="link" href="/user/profile"><i class="link"></i> Go to your profile</a>
                <% } else { %>
                    <p class="follow">
                        Please
                        <a class="link" href="/auth/login"><i class="follow"></i> Login</a>
                        or
                        <a class="link" href="/auth/register"><i class="follow"></i> Register</a>
                        to continue.
                    </p>
                    <% } %>
        </div>
    </body>

    <%-include('partials/footer') %>