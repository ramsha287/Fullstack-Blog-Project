<%- include('partials/header', { title: "Edit Comment" , user: user }) %>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            padding-top: 10px;
            min-height: 100vh;
        }

        header {
            box-sizing: border-box;
            padding: 0 20px;
            max-width: 100vw;
        }

        .nav {
            max-width: 400px;
            width: 100%;
            margin: 0 auto;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            -webkit-text-stroke: 1px rgb(20, 84, 93);
            color: white;
            margin-top: 10px;
        }

        .comment-form {
            width: 100%;
            max-width: 500px;
            padding: 20px;
            background: rgba(3, 81, 91, 0.5);
            backdrop-filter: blur(2px);
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .comment-form textarea {
            width: 100%;
            height: 150px;
            padding: 10px;
            border: 2px solid rgba(3, 48, 54, 0.5);
            border-radius: 8px;
            resize: none;
            font-size: 16px;
            color: white;
            background-color: transparent;
            outline: none;
            text-align: start;
            white-space: pre-wrap;
        }

        .comment-form label {
            font-size: 18px;
            color: white;
            display: block;
            margin-bottom: 10px;
        }

        .comment-form button {
            width: 100%;
            padding: 12px;
            background-color: rgba(3, 81, 91, 0.7);
            color: white;
            border: 2px solid rgba(3, 48, 54, 0.5);
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

        .comment-form button:hover {
            background-color: rgba(3, 81, 91, 0.8);
        }

        .error {
            color: red;
            font-size: 14px;
            margin-top: 10px;
        }

        .success {
            color: green;
            font-size: 14px;
            margin-top: 10px;
        }
    </style>



    <h1>Edit Comment</h1>

    <!-- Comment edit form -->
    <div class="comment-form">
        <form action="/comments/<%= comment._id %>?_method=PUT" method="POST">
            <!-- Textarea for editing comment content -->
            <label for="content">Edit your comment:</label>
            <textarea name="content" rows="4" cols="50" required><%= comment.content %>
        </textarea>

            <!-- Submit button to update the comment -->
            <button type="submit">Update Comment</button>

            <!-- Error or success messages -->
            <% if (error) { %>
                <div class="error">
                    <%= error %>
                </div>
                <% } %>
                    <% if (success) { %>
                        <div class="success">
                            <%= success %>
                        </div>
                        <% } %>
        </form>
    </div>

    <%- include('partials/footer') %>